{
    "include": [
        "src/index.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "target": "es5",
        "typeRoots": ["node_modules/@types"],
        "types": ["node", "lodash"],
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
    }
}
{
  "name": "mongo-manager",
  "version": "1.0.0",
  "description": "MongoDB Database Manager",
  "main": "index.js",
  "scripts": {
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build": "run-p -lsn build:**",
